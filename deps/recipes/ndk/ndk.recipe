# This recipe contains the setup tasks for unpacking and installing the NDK
inherit common

version="r11c"

# Select the correct NDK version for the host system:
case $(uname -sm) in
"Linux x86_64")
    system=linux-x86_64
    source="https://dl.google.com/android/repository/android-ndk-$version-$system.zip#de5ce9bddeee16fb6af2b9117e9566352aa7e279" ;;
"Darwin x86_64")
    system=darwin-x86_64
    source="https://dl.google.com/android/repository/android-ndk-$version-$system.zip#4ce8e7ed8dfe08c5fe58aedf7f46be2a97564696" ;;
*)
    echo "Unknown host platform!"
    exit 1;;
esac

# Extracts a standalone toolchain from the NDK.
# $1 arch name for installing the toolchain.
# $2 NDK toolchain name.
setup() {
    echo Unpacking NDK...
    archive="$download_dir/android-ndk-$version-$system.zip"
    unzip -o -d"$work_dir" $archive

    echo Unpacking toolchain...
    cd android-ndk-$version
    ./build/tools/make-standalone-toolchain.sh --toolchain=$2-4.9 --platform=android-9 --install-dir=$work_dir/$1 --verbose

    echo Patching headers...
    cat $recipe_dir/to_string.h >> $work_dir/$1/include/c++/4.9/bits/basic_string.h
    echo '#include <limits.h>' >> $work_dir/$1/sysroot/usr/include/stdint.h
}
setup_arm() {
    setup arm arm-linux-androideabi
}
setup_x86() {
    setup x86 x86
}
setup_mips() {
    setup mips mipsel-linux-android
}

task setup-arm download
task setup-x86 download
task setup-mips download
default=setup-arm
